<odoo>
    <data>
        <!-- Form view -->
        <record id="ksba_school_form_view" model="ir.ui.view">
            <field name="name">ksba.school.form</field>
            <field name="model">ksba.school</field>
            <field name="arch" type="xml">
                <form>                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="students">
                                    <tree>
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                        <field name="home_location"/>
                                    </tree>
                                </field>
                            </page>
                              <page string="Administrators">
                                <field name="administrator_ids">
                                    <tree>
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                        <field name="phone"/>

                                    </tree>
                                </field>
                            </page>
                         <page string="Drivers">
                                <field name="driver_ids">
                                    <tree>
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                        <field name="home_location"/>
                                        <field name="phone"/>
                                        
                                    </tree>
                                </field>
                            </page>
                            <page string="Buses">
                                <field name="buses_id">
                                    <tree>
                                        <field name="plate_number"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="ksba_school_tree_view" model="ir.ui.view">
            <field name="name">ksba.school.tree</field>
            <field name="model">ksba.school</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name"/>
                    <field name="address"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

          <record model="ir.actions.act_window" id="ksba_school_action">
        <field name="name">School</field>
        <field name="res_model">ksba.school</field>
<!--        <field name="view_mode">form</field>-->
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menuitem -->
    <menuitem id="ksba_school_menuitem" name="School" parent="ksba_menu" sequence="20"/>
    <menuitem id="ksba_school_menuitem_form" name="School" parent="ksba_school_menuitem" action="ksba_school_action"
              sequence="10"/>


    </data>
</odoo>