<odoo>
    <data>
        <!-- Form view -->
        <record id="ksba_school_form_view" model="ir.ui.view">
            <field name="name">ksba.school.form</field>
            <field name="model">ksba.school</field>
            <field name="arch" type="xml">
                <form string="Kenya School Bus App - School">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="students" mode="kanban">
                                    <kanban>
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                    </kanban>
                                </field>
                            </page>
                            <page string="Buses">
                                <field name="buses" mode="kanban">
                                    <kanban>
                                        <field name="name"/>
                                        <field name="number_plate"/>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="ksba_school_tree_view" model="ir.ui.view">
            <field name="name">ksba.school.tree</field>
            <field name="model">ksba.school</field>
            <field name="arch" type="xml">
                <tree string="Kenya School Bus App - School">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <!-- Kanban view -->
        <record id="ksba_school_kanban_view" model="ir.ui.view">
            <field name="name">ksba.school.kanban</field>
            <field name="model">ksba.school</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="email"/>
                    <field name="phone"/>
                </kanban>
            </field>
        </record>

        <!-- Search view -->
        <record id="ksba_school_search_view" model="ir.ui.view">
            <field name="name">ksba.school.search</field>
            <field name="model">ksba.school</field>
            <field name="arch" type="xml">
                <search string="Kenya School Bus App - School">
                    <field name = 'name'/>
                    <field name = 'address'/>
                    <field name = 'email'/>
                    <field name = 'phone'/>
                </search>
            </field>
        </record>

    </data>
</odoo>