<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree view -->
    <record id="ksba_route_tree_view" model="ir.ui.view">
        <field name="name">ksba.route.tree</field>
        <field name="model">ksba.route</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bus_id"/>
                <field name="description"/>
                <field name="route_stops"/>
                <field name="start_location"/>
                <field name="end_location"/>
                <field name="distance"/>
                <field name="duration"/>
            </tree>
        </field>
    </record>
    <!-- Form view -->
    <record id="ksba_route_form_view" model="ir.ui.view">
        <field name="name">ksba.route.form</field>
        <field name="model">ksba.route</field>
        <field name="arch" type="xml">
            <form>
                 <header>
                        <button name="action_calculate_distance" string="Calculate Distance" type="object" class="oe_highlight"/>
                        <button name="action_calculate_duration" string="Calculate Duration" type="object" class="oe_highlight"/>
                    </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="bus_id"/>
                        <field name="description"/>
                        <field name="start_location"/>
                        <field name="end_location"/>
                        <field name="distance"/>
                        <field name="duration"/>
                    </group>
                    <notebook>
                        <page string="Stops">
                            <field name="route_stops" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="ksba_route_kanban_view" model="ir.ui.view">
        <field name="name">ksba.route.kanban</field>
        <field name="model">ksba.route</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="bus_id"/>
                <field name="description"/>
                <field name="route_stops"/>
                <field name="start_location"/>
                <field name="end_location"/>
                <field name="distance"/>
                <field name="duration"/>
            </kanban>
        </field>
    </record>

       <!-- Search View -->
        <record model="ir.ui.view" id="ksba_route_search_view">
            <field name="name">ksba.route.search</field>
            <field name="model">ksba.route</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="start_location"/>
                    <field name="end_location"/>
                    <field name="distance"/>
                    <field name="duration"/>
                </search>
            </field>
        </record>

    <!-- Action -->
     <record model="ir.actions.act_window" id="ksba_route_action">
            <field name="name">Routes</field>
            <field name="res_model">ksba.route</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>

    <!-- Menuitem -->
     <menuitem id="ksba_route_menuitem" name="Routes" parent="ksba_menu" sequence="20"/>
     <menuitem id="ksba_route_menuitem_form" name="Routes" parent="ksba_route_menuitem" action="ksba_route_action" sequence="10"/>

</odoo>
